    <profiles>
        <profile>
            <id>productA-development</id>
            <properties>
                <environment>productA-development</environment>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <artifactId>alarm-server</artifactId>
                    <groupId>com.alibaba.youxia</groupId>
                    <version>1.0.0.release</version>
