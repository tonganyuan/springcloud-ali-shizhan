<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alibaba.cloud.youxia.mapper.AccountMapper">
    <update id="deductAccountBalance" parameterType="com.alibaba.cloud.youxia.bo.AccountBo">
    update at_account t set t.amount=t.amount-#{amount}
    where t.account_id=#{accountId} and t.user_id=#{userId}
    </update>
</mapper>